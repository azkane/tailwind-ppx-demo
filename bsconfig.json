{
    "name": "tailwind-starter",
    "reason": {
        "react-jsx": 3
    },
    "sources": {
        "dir": "src",
        "subdirs": true,
        "generators": [
            {
                "name": "postcss",
                "edge": [
                    "tailwind.css",
                    ":",
                    "index.css"
                ]
            }
        ]
    },
    "generators": [
        {
            "name": "postcss",
            "command": "postcss build $in -o $out -c ../.."
        }
    ],
    "bsc-flags": [
        "-bs-super-errors",
        "-bs-no-version-header"
    ],
    "ppx-flags": [
        [
            "@dylanirlbeck/tailwind-ppx/tailwind-ppx", "-path src/tailwind.css"
        ]
    ],
    "package-specs": [
        {
            "module": "commonjs",
            "in-source": true
        }
    ],
    "suffix": ".bs.js",
    "bs-dependencies": [
        "reason-react"
    ],
    "refmt": 3,
    "warnings": {
        "error": "+8"
    }
}
